<div class="row">
  <div class="col-12 bg-white p-4" style="border-radius:2px; border: 1px solid #d4d4d4">
    <div class="row">
      <div class="col-lg-4 col-12 mx-auto">
        {{#if pageUser.image}}
        <img class="img-responsive center-block" src="{{pageUser.image}}" style="width: 300px;margin-bottom: 25px;">
        {{else}}
        <img class="img-responsive center-block"
          src="https://upload.wikimedia.org/wikipedia/commons/thumb/a/ac/No_image_available.svg/600px-No_image_available.svg.png"
          style="width: 300px;margin-bottom: 25px;">
        {{/if}}
      </div>
      <div class="col-lg-8 pl-4 mt-4 col-12 mx-auto">
        <h3>{{pageUser.name}}</h3>
        <p>{{pageUser.email}}</p>
        <p class="mb-0">{{commentRestaurants.length}} 個已評論餐廳</p>
        <p class="mb-0">{{favoritedRestaurants.length}} 個收藏的餐廳</p>
        <p class="mb-0">{{followings.length}} 個followings(正在追蹤)</p>
        <p>{{followers.length}} 個followers(追隨者)</p>
        {{#ifEqual pageUser.id user.id}}
        <a href="/users/{{user.id}}/edit" class="btn btn-primary">Edit</a>
        {{/ifEqual}}
      </div>
    </div>
  </div>
  <div class="card-box col-md-4 col-12 pl-0 pr-2 py-3">
    <div class="card w-10">
      <div class="card-header">
        {{followings.length}} 個followings (正在追蹤)
      </div>
      <div class="card-body d-flex flex-nowrap" style="overflow-x: scroll;">
        {{#each followings}}
        <a href="/users/{{this.id}}" class="m-1 d-inline-block">
          <img
            src="{{#if this.image}}{{this.image}}{{else}}https://upload.wikimedia.org/wikipedia/commons/thumb/a/ac/No_image_available.svg/600px-No_image_available.svg.png{{/if}}"
            style="width:50px;height:50px; border-radius:10%;box-shadow:0px 0px 1px 1px rgba(0,0,0,0.1);">
        </a>
        {{/each}}
      </div>
    </div>
  </div>
  <div class="card-box col-md-4 col-12 pl-0 pr-2 pt-2 order-md-1">
    <div class="card w-100">
      <div class="card-header">
        {{followers.length}} 個followers (追隨者)
      </div>
      <div class="card-body d-flex flex-nowrap" style="overflow-x: scroll;">
        {{#each followers}}
        <a href="/users/{{this.id}}" class="m-1 d-inline-block">
          <img
            src="{{#if this.image}}{{this.image}}{{else}}https://upload.wikimedia.org/wikipedia/commons/thumb/a/ac/No_image_available.svg/600px-No_image_available.svg.png{{/if}}"
            style="width:50px;height:50px; border-radius:10%;box-shadow:0px 0px 1px 1px rgba(0,0,0,0.1);">
        </a>
        {{/each}}
      </div>
    </div>
  </div>
  <div class="card-box col-md-8 col-12 pl-2 pr-0 py-3">
    <div class="card w-100">
      <div class="card-header">
        {{commentRestaurants.length}} 個已評論餐廳
      </div>
      <div class="card-body d-flex flex-nowrap" style="overflow-x: scroll;">
        {{#each commentRestaurants}}
        <a href="/restaurants/{{this.id}}" class="m-1 d-inline-block">
          <img
            src="{{#if this.image}}{{this.image}}{{else}}https://upload.wikimedia.org/wikipedia/commons/thumb/a/ac/No_image_available.svg/600px-No_image_available.svg.png{{/if}}"
            style="width:50px;height:50px; border-radius:10%;box-shadow:0px 0px 1px 1px rgba(0,0,0,0.1);">
        </a>
        {{/each}}
      </div>
    </div>
  </div>
  <div class="card-box col-md-8 col-12 pl-2 pr-0 pt-2 order-md-2">
    <div class="card w-100">
      <div class="card-header">
        {{favoritedRestaurants.length}} 個收藏的餐廳
      </div>
      <div class="card-body d-flex flex-nowrap" style="overflow-x: scroll;">
        {{#each favoritedRestaurants}}
        <a href="/restaurants/{{this.id}}" class="m-1 d-inline-block">
          <img
            src="{{#if this.image}}{{this.image}}{{else}}https://upload.wikimedia.org/wikipedia/commons/thumb/a/ac/No_image_available.svg/600px-No_image_available.svg.png{{/if}}"
            style="width:50px;height:50px; border-radius:10%;box-shadow:0px 0px 1px 1px rgba(0,0,0,0.1);">
        </a>
        {{/each}}
      </div>
    </div>
  </div>